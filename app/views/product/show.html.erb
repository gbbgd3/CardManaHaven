<div class="flex my-4">
  <div class="flex-shrink-0">
    <% if @product.image.attached? %>
      <%= image_tag @product.image, alt: 'Image', class: 'mb-4', style: 'max-width: 300px;' %>
    <% elsif @product.image_url.is_a?(String) || !@product.image_url.nil? %>
      <%= image_tag @product.image_url, alt: 'Card Image', class: 'mb-4', style: 'max-width: 300px;' %>
    <% else %>
      <%= image_tag 'assets/images/no_img.png', alt: 'Default Card Image', class: 'mb-4', style: 'max-width: 300px;' %>
    <% end %>
  </div>
  <div class="flex flex-col ml-4 flex-grow">
    <h1 class="text-3xl font-bold mb-2 self-start">Product Detail</h1>
    <h2 class="text-xl font-bold mb-2"><%= @product.product_name if @product.present? %></h1>
    <%= render partial: 'layouts/common/product_details', locals: { product: @product } %>
    </div>
</div>

