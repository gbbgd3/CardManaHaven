<div class="max-w-2xl mx-auto p-4">
  <h1 class="text-2xl font-bold mb-4">Categories</h1>

  <ul class="space-y-4">
    <% Category.all.each do |category| %>
      <li class="bg-white p-4 rounded-md shadow-md flex justify-between items-center">
        <div>
          <h2 class="text-lg font-semibold"><%= category.name %></h2>
          <p class="text-gray-500"><%= pluralize(category.products.count, 'product') %></p>
        </div>
        <a href="/yugioh" class="text-blue-500 hover:underline">View Products</a>
      </li>
    <% end %>
  </ul>
</div>
